include utils.pug

html
  head
    title="GoodGames"
    link(rel='stylesheet' href='/stylesheets/sign-log.css')
    link(rel="preconnect" href="https://fonts.gstatic.com")
    link(href="https://fonts.googleapis.com/css2?family=Ubuntu&display=swap" rel="stylesheet")
  body.background_image
    +validationErrorSummary(errors)
    #title
      img(src="/images/title_header.png", alt="", srcset="")
    form(action='/signup' method='post')
        input(type='hidden' name='_csrf' method='post' value=csrfToken)
        div(class="main")
            p(class="sign" align="center") Sign Up
                div(class='sign')
                    input(type='text' name='username' value=user.username class='un' placeholder='Enter Username' required)
                    input(type='text' name='firstName' value=user.firstName class='un' placeholder='First Name' required)
                    input(type='text' name='lastName' value=user.lastName class='un' placeholder='Last Name' required)
                    input(type='email' name='email' value=user.email class='un' placeholder='Email' required)
                    input(type='password' name='password' class='un' placeholder='Password' required)
                    input(type='password' name='confirmPassword' class='un' placeholder='Confirm Password' required)
                    button(type='submit' class='submit') Sign Up
                    div
                          a(href='/login' class="missing") Already Have an Account? Click Here!
